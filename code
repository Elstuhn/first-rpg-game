def save():
  #player stats, player info and gear
  with open('pdata', 'w') as filewrite:
    csvwrite = csv.writer(filewrite)
    csvwrite.writerow(f'{pstats['hp']}')
    csvwrite.writerow(f'{pstats['attack']}')
    csvwrite.writerow(f'{pstats['defense']}')
    csvwrite.writerow(f'{pstats['dodge']}')
    csvwrite.writerow(f'{p.name}')
    csvwrite.writerow(f'{p.gold}')
    csvwrite.writerow(f'{p.level}')
    csvwrite.writerow(f'{p.exp}')
    for i in range(pgear.gear):
      csvwrite.writerow(f'{pgear.gear[i]}')
  #dungeon data and inventory 
  with open('adata', 'w') as filewrite:
    csvwrite = csv.writer(filewrite)
    csvwrite.writerow()



def main():
  inp = input()
  while not inp.upper() in ['!HELP', '!CLEAR', '!ADV', '!SAVE']
  if inp.upper() == '!HELP':
    help()
  elif inp.upper() == '!CLEAR':
    clearscreen()
  elif inp.upper() == '!ADV':
    adv()
