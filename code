class Player(): 
  def __init__(self, name, gold, level, exp):
    self.name = name
    self.gold = gold
    self.level = level
    self.exp = exp
  
  def __repr__(self):
    return f'Gold : {self.gold}\nLevel : {self.level}\n Experience : {self.exp}'

