#player items
class PItems():
  def __init__(self, *gear):
    self.gear = gear
  def addstat(self):
    statadd = {
      'hp':0,
      'attack':0,
      'defense':0,
      'dodge':0
      }
    for i in range(len(self.gear[0])):
      splitl = gear_data[f'{self.gear[0][i]}'].split()
      for i in range(len(splitl)):
        splitd = splitl[i].split(':')
        statadd[f'{splitd[0]}']+=int(f'{splitd[1]}')
    return statadd

